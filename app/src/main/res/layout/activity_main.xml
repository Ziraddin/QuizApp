<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="275dp"
        android:layout_height="194dp"
        android:layout_marginTop="332dp"
        android:columnCount="1"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/opt1"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#FF9800"
            android:onClick="checkAnswer"
            android:text="option_1"
            app:cornerRadius="0dp"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/opt2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#FF9800"
            android:onClick="checkAnswer"
            android:text="option_2"
            app:cornerRadius="0dp"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/opt3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#FF9800"
            android:onClick="checkAnswer"
            android:text="option_3"
            app:cornerRadius="0dp"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="85dp" />

        <Button
            android:id="@+id/opt4"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#FF9800"
            android:onClick="checkAnswer"
            android:text="option_4"
            app:cornerRadius="0dp"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="85dp" />
    </GridLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:hint="Question"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/qcount"
        app:layout_constraintStart_toStartOf="@+id/qcount"
        app:layout_constraintTop_toBottomOf="@+id/qcount" />

    <TextView
        android:id="@+id/qcount"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="96dp"
        android:hint="Question : 1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>